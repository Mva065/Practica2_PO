package Exercici1;
import java.util.GregorianCalendar;

public class ContenidorBrossa {

	private String codi, color; //Atributs
	Ubicacio ubicacio;
	private int anycol, anyret;
	
	public String getcodi(){ // Mètode d'accés als atributs
		return codi;
	}
	
	public String color (){ // Mètode d'accés als atributs
		return color;
	}
	
	public int getanyret(){ // Mètode d'accés als atributs
		return anyret;
	}
	
	public int getanycol(){ // Mètode d'accés als atributs
		return anycol;
	}
	
	public Ubicacio getUbicacio(){ // Mètode d'accés als atributs
		return null;
	}
	
	public ContenidorBrossa(String codi, String color, Ubicacio ubicacio, int anycol, int anyret){ //Constructor
		this.codi = codi;
		this.color = color;
		this.anycol = anycol;
		this.anyret = anyret;
		this.ubicacio = ubicacio;
	}
	
	
	public String getTipusBrossa(){ //Metodes
		if (this.color == "marró"){
			return "orgànic";
		} else if (this.color == "gris"){
			return "rebuig";
		}else if (this.color == "blau"){
			return "paper";
		}else if (this.color == "groc"){
			return "plàstic";
		}else if (this.color == "verd"){
			return "vidre";
		}else {
			return "ERROR";
		}
	}
	
	public String getEstat(){
		GregorianCalendar avui = new GregorianCalendar();
		int anyActual = avui.get(1);
		if (anyActual - this.anycol >= 5){
			return "Vell";
		} else if (anyActual - this.anycol <= 3){
			return "Nou";
		} else {
			return "Seminou";
		}
	}
		
	public void canviarUbicacio(Ubicacio novaUbicacio){
		
	}
	
	public void retirarViaPublica(int anyret){
		
	}
}
